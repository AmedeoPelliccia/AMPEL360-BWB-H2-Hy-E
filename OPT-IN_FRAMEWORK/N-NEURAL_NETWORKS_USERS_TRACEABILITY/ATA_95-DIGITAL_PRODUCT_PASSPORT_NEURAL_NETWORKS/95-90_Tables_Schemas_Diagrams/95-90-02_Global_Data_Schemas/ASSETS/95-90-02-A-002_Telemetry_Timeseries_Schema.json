{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Telemetry Time-Series Schema",
  "version": "1.0.0",
  "type": "object",
  "properties": {
    "telemetry_id": {
      "type": "string",
      "format": "uuid"
    },
    "aircraft_uuid": {
      "type": "string",
      "format": "uuid"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "sensor_id": {
      "type": "string"
    },
    "sensor_type": {
      "type": "string"
    },
    "value": {
      "type": "number"
    },
    "unit": {
      "type": "string"
    },
    "quality": {
      "type": "string",
      "enum": [
        "good",
        "uncertain",
        "bad"
      ]
    }
  },
  "required": [
    "telemetry_id",
    "aircraft_uuid",
    "timestamp",
    "sensor_id",
    "value"
  ]
}