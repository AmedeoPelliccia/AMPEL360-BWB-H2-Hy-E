{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Event Log Schema",
  "version": "1.0.0",
  "type": "object",
  "properties": {
    "event_id": {
      "type": "string",
      "format": "uuid"
    },
    "aircraft_uuid": {
      "type": "string",
      "format": "uuid"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "event_type": {
      "type": "string",
      "enum": [
        "alert",
        "warning",
        "info",
        "error"
      ]
    },
    "severity": {
      "type": "string",
      "enum": [
        "critical",
        "high",
        "medium",
        "low"
      ]
    },
    "system": {
      "type": "string"
    },
    "message": {
      "type": "string"
    },
    "metadata": {
      "type": "object"
    }
  },
  "required": [
    "event_id",
    "timestamp",
    "event_type",
    "system"
  ]
}