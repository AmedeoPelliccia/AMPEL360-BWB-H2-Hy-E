{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Evidence Record Schema",
  "version": "1.0.0",
  "type": "object",
  "properties": {
    "evidence_id": {
      "type": "string",
      "format": "uuid"
    },
    "requirement_id": {
      "type": "string"
    },
    "test_case_id": {
      "type": "string"
    },
    "evidence_type": {
      "type": "string",
      "enum": [
        "test_result",
        "inspection",
        "analysis",
        "demonstration"
      ]
    },
    "status": {
      "type": "string",
      "enum": [
        "passed",
        "failed",
        "blocked",
        "not_run"
      ]
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "artifacts": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "required": [
    "evidence_id",
    "requirement_id",
    "evidence_type",
    "status"
  ]
}