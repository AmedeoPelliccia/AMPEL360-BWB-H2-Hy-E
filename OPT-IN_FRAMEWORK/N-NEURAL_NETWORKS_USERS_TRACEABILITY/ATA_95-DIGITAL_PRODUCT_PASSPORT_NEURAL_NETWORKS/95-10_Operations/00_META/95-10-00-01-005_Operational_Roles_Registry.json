  "permission_definitions": {
    "nn_system_permissions": {
      "monitor": "View NN system status, recommendations, and performance metrics",
      "override": "Override NN system recommendations or disable NN functions",
      "configure": "Modify NN system configuration parameters",
      "update": "Deploy new NN models or update existing models"
    },
    "dpp_access": {
      "read": "View DPP data relevant to role",
      "write": "Create or modify DPP records",
      "annotate": "Add comments or annotations to DPP records",
      "admin": "Full administrative access to DPP system"
    }
  },
