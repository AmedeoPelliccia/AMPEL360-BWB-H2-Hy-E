{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "H2 Sensor Data Schema",
  "type": "object",
  "properties": {
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "tank_pressure_bar": {
      "type": "number",
      "minimum": 0,
      "maximum": 700
    },
    "tank_temperature_k": {
      "type": "number",
      "minimum": 20,
      "maximum": 300
    },
    "fuel_level_percent": {
      "type": "number",
      "minimum": 0,
      "maximum": 100
    },
    "flow_rate_kg_s": {
      "type": "number",
      "minimum": 0
    }
  },
  "required": ["timestamp", "tank_pressure_bar", "tank_temperature_k", "fuel_level_percent"]
}
