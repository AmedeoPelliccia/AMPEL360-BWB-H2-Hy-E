<?xml version="1.0" encoding="UTF-8"?>
<brex xmlns="http://www.s1000d.org/brex" version="5.0">
  <brexIdent>
    <brexCode>AMPEL360-A-00-00-00-00A-022A-D</brexCode>
    <issueInfo issueNumber="001" inWork="00"/>
    <issueDate year="2025" month="11" day="03"/>
  </brexIdent>
  
  <brexTitle>Business Rules Exchange (BREX) for AMPEL360 Aircraft Documentation</brexTitle>
  
  <applicability>
    <aircraft>
      <model>AMPEL360 BWB H2 Hy-E</model>
      <variant>Q100 INTEGRA</variant>
    </aircraft>
  </applicability>
  
  <brexRules>
    <structureRules>
      <rule id="SR-001">
        <description>All data modules must use standard DMC coding</description>
        <requirement>DMC format: DMC-AMPEL360-A-XX-YY-ZZ-XXX-XXXC-D</requirement>
        <severity>Error</severity>
      </rule>
      
      <rule id="SR-002">
        <description>Information codes must match content type</description>
        <requirement>Descriptive: 000-099, Procedural: 200-799, Process: 900-999</requirement>
        <severity>Error</severity>
      </rule>
      
      <rule id="SR-003">
        <description>Issue numbers must be sequential</description>
        <requirement>First issue is 001, incremented for each revision</requirement>
        <severity>Error</severity>
      </rule>
    </structureRules>
    
    <contentRules>
      <rule id="CR-001">
        <description>All procedures must include safety warnings</description>
        <requirement>Reference to common warnings/cautions or include inline</requirement>
        <severity>Warning</severity>
      </rule>
      
      <rule id="CR-002">
        <description>CAOS-enabled modules must reference integration status</description>
        <requirement>Include CAOS integration level and DMC references</requirement>
        <severity>Warning</severity>
      </rule>
      
      <rule id="CR-003">
        <description>All data modules must include applicable references</description>
        <requirement>Minimum: parent system, related procedures, engineering docs</requirement>
        <severity>Warning</severity>
      </rule>
    </contentRules>
    
    <qualityRules>
      <rule id="QR-001">
        <description>Technical accuracy review required</description>
        <requirement>Subject matter expert review and approval</requirement>
        <severity>Error</severity>
      </rule>
      
      <rule id="QR-002">
        <description>CAOS data validation required</description>
        <requirement>Digital twin synchronization and fleet data verification</requirement>
        <severity>Warning</severity>
      </rule>
      
      <rule id="QR-003">
        <description>Periodic review cycle</description>
        <requirement>Review every 12 months or upon significant change</requirement>
        <severity>Info</severity>
      </rule>
    </qualityRules>
    
    <caosRules>
      <rule id="CAOS-001">
        <description>CAOS-enabled modules must specify integration level</description>
        <requirement>Full, Partial, or Monitoring only</requirement>
        <severity>Error</severity>
      </rule>
      
      <rule id="CAOS-002">
        <description>Predictive maintenance thresholds documented</description>
        <requirement>All CAOS alerts must have defined thresholds and actions</requirement>
        <severity>Warning</severity>
      </rule>
      
      <rule id="CAOS-003">
        <description>Digital twin synchronization requirements</description>
        <requirement>Sync frequency and acceptance criteria defined</requirement>
        <severity>Warning</severity>
      </rule>
    </caosRules>
  </brexRules>
  
  <validationContext>
    <s1000dVersion>5.0</s1000dVersion>
    <schemaLocation>http://www.s1000d.org/S1000D_5-0/xml_schema_flat/</schemaLocation>
  </validationContext>
  
</brex>
